{
	"compilerOptions": {
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"lib": ["dom", "es2015", "es2017"],
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
